# .env.local
# AI API Keys (get from providers' dashboards)
ANTHROPIC_API_KEY=sk-ant-...your-anthropic-key...
OPENAI_API_KEY=sk-...your-openai-key...
GOOGLE_API_KEY=AIza...your-google-key...

# Optional: Vercel-specific (auto-set on deploy, but local override)
NEXT_PUBLIC_VERCEL_URL=http://localhost:3000

# App-specific (e.g., for rate limiting or analytics)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=86400

# Database Configuration (using in-memory/file-based storage for simplicity)
# For production, use: DATABASE_URL=postgresql://user:pass@host:port/dbname
DATABASE_URL=file:./data/history.json

# History Configuration
MAX_HISTORY_PER_USER=100

